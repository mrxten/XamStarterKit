<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sample="clr-namespace:XamStarterKit.Sample;assembly=XamStarterKit.Sample"
             xmlns:localization="clr-namespace:XamStarterKit.Forms.Localization;assembly=XamStarterKit.Forms"
             x:Class="XamStarterKit.Sample.Pages.Localize.LocalizePage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="25">
            <Label Text="{Binding Localize[Hello]}"
                   HorizontalOptions="Center" />
            <Button Text="{Binding Localize[ChangeLang]}"
                    HorizontalOptions="Center"
                    Command="{Binding ChangeLangCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>